{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Seats won by Perikatan Nasional",
    "subtitle": ["Source: https://github.com/dosm-malaysia/data-open/tree/main/datasets/census"],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "#000000",
    "subtitleColor":"#000000"},

  "data": {
    "url": "https://raw.githubusercontent.com/karmun2710/karmun2710.github.io/main/project/data/Vote_Share.csv",
    "format": {"type": "csv"}
  },


  "width": 500,  

  "encoding": {
      "y": {"field": "Vote Share", "type": "quantitative"},
      "x": {"field": "ethnicity_proportion_bumi", "type": "quantitative", "title": "Proportion of Bumiputeras"},
      "color":{
        "condition": {
          "test": "datum.Winner == 'PN'",
          "value": "red"
        },
        "value": "blue"
      }

  },
  
  "mark": {"type": "circle", "tooltip": true, "interpolate": "monotone"}

}